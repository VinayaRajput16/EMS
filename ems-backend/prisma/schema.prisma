generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password_hash String
  role          String
  is_active     Boolean        @default(true)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
  events        Event[]
  venues        Venue[]
  orders        Order[]
  issuedTickets IssuedTicket[]
}

model Event {
  id            String   @id @default(uuid())
  title         String
  description   String?
  startDateTime DateTime
  endDateTime   DateTime

  venueId     String? // optional
  organizerId String

  status EventStatus @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organizer User   @relation(fields: [organizerId], references: [id])
  venue     Venue? @relation(fields: [venueId], references: [id]) // ‚Üê FIX HERE

  allocationMode AllocationMode @default(MANUAL)

  tickets       Ticket[]
  orders        Order[]
  ticketTypes   TicketType[]
  issuedTickets IssuedTicket[]

  @@index([organizerId])
  @@index([status])
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
}

model Venue {
  id          String   @id @default(uuid())
  name        String
  location    String
  capacity    Int
  organizerId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organizer      User           @relation(fields: [organizerId], references: [id])
  events         Event[]
  seatCategories SeatCategory[]
  seats          Seat[]

  @@index([organizerId])
}

model Ticket {
  id                String   @id @default(uuid())
  eventId           String
  name              String // e.g., "Regular", "VIP"
  price             Float    @default(0)
  totalQuantity     Int
  availableQuantity Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  event  Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([eventId])
}

model TicketType {
  id        String   @id @default(uuid())
  eventId   String
  name      String // "VIP", "Regular" etc.
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event         Event                @relation(fields: [eventId], references: [id], onDelete: Cascade)
  mappings      TicketTypeCategory[]
  issuedTickets IssuedTicket[]

  @@index([eventId])
}

model TicketTypeCategory {
  id             String @id @default(uuid())
  ticketTypeId   String
  seatCategoryId String

  ticketType   TicketType   @relation(fields: [ticketTypeId], references: [id], onDelete: Cascade)
  seatCategory SeatCategory @relation(fields: [seatCategoryId], references: [id], onDelete: Cascade)

  @@unique([ticketTypeId, seatCategoryId])
  @@index([seatCategoryId])
}

model IssuedTicket {
  id           String   @id @default(uuid())
  userId       String
  eventId      String
  ticketTypeId String
  seatId       String? // null in manual mode until assigned
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  event      Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ticketType TicketType @relation(fields: [ticketTypeId], references: [id], onDelete: Restrict)
  seat       Seat?      @relation(fields: [seatId], references: [id])

  @@index([userId])
  @@index([eventId])
  @@index([ticketTypeId])
  @@index([seatId])
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  eventId   String
  ticketId  String
  quantity  Int
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  event  Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ticket Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([eventId])
  @@index([ticketId])
  @@index([status])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model SeatCategory {
  id        String   @id @default(uuid())
  venueId   String
  name      String
  priority  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  venue                Venue                @relation(fields: [venueId], references: [id], onDelete: Cascade)
  seats                Seat[]
  ticketTypeCategories TicketTypeCategory[]

  @@index([venueId])
  @@index([venueId, priority])
}

model Seat {
  id         String     @id @default(uuid())
  venueId    String
  eventId    String? // assigned at publish
  orderId    String?
  categoryId String
  label      String
  status     SeatStatus @default(AVAILABLE)

  venue         Venue          @relation(fields: [venueId], references: [id], onDelete: Cascade)
  category      SeatCategory   @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  issuedTickets IssuedTicket[]
}

enum AllocationMode {
  MANUAL
  AUTOMATED
}

enum SeatStatus {
  AVAILABLE
  ALLOCATED
}
